# Example environment configuration file

# Database configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=test

# Session configuration
SESSION_SECRET=your_session_secret
SESSION_STORE=mysql

# Security configuration
CSP_DIRECTIVES_DEFAULT_SRC="'self'"
CSP_DIRECTIVES_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_DIRECTIVES_STYLE_SRC="'self' 'unsafe-inline'"
CSP_DIRECTIVES_IMG_SRC="'self' data:"
CSP_DIRECTIVES_CONNECT_SRC="'self'"

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Node environment
NODE_ENV=development

# Port
PORT=3000

# View engine
VIEW_ENGINE=ejs

# Static file path
STATIC_PATH=public