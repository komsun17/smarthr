<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">HIP Carpark</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                        <li class="breadcrumb-item active">HIP Carpark</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <!-- Main Card -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">HIP Carpark Management System</h3>
                </div>
                
                <form action="/hip-carpark" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="plateNumber">หมายเลขทะเบียน:</label>
                            <input type="text" class="form-control" id="plateNumber" name="plateNumber" required>
                        </div>
                        <div class="form-group">
                            <label for="parkingSlot">ช่องจอดรถ:</label>
                            <input type="text" class="form-control" id="parkingSlot" name="parkingSlot" required>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">บันทึก</button>
                        <a href="/dashboard" class="btn btn-secondary">ยกเลิก</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
            </div>
            
            <!-- Results Display -->
            <% if (typeof data !== 'undefined') { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h3 class="card-title">ข้อมูลที่บันทึก</h3>
                </div>
                <div class="card-body">
                    <pre><%= JSON.stringify(data, null, 2) %></pre>
                </div>
            </div>
            <% } %>
        </div>
    </section>
</div>
