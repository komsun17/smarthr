<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Import TimeMint</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Import TimeMint</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Import Excel สำหรับ TimeMint</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/import-timemint" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="file1">เลือกไฟล์ที่ 1:</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="file1" name="file1">
                                    <label class="custom-file-label" for="file1">Choose file</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="file2">เลือกไฟล์ที่ 2:</label>
                             <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="file2" name="file2">
                                    <label class="custom-file-label" for="file2">Choose file</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Import</button>
                    </div>
                </form>
            </div>

            <% if (typeof result1 !== 'undefined' && result1.length > 0) { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h3 class="card-title">ผลลัพธ์ไฟล์ที่ 1</h3>
                </div>
                <div class="card-body">
                    <pre><%= JSON.stringify(result1, null, 2) %></pre>
                </div>
            </div>
            <% } %>

            <% if (typeof result2 !== 'undefined' && result2.length > 0) { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h3 class="card-title">ผลลัพธ์ไฟล์ที่ 2</h3>
                </div>
                <div class="card-body">
                    <pre><%= JSON.stringify(result2, null, 2) %></pre>
                </div>
            </div>
            <% } %>

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
